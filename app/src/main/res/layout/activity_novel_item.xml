<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jervies.iread.MovieItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--显示内容的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <!--显示影评标题-->
            <TextView
                android:id="@+id/textView_NovelItem_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="22sp"/>

            <!--显示作者名与阅读量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!--显示解析数据作者名-->
                <TextView
                    android:id="@+id/textView_NovelItem_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>

                <!--显示解析数据文章阅读量-->
                <TextView
                    android:id="@+id/textView_NovelItem_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!--显示解析数据文本text1-->
            <TextView
                android:id="@+id/textView_NovelItem_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#e4e4e4"
                android:padding="20dp"
                android:textSize="16sp"/>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#dbd8d8"/>

            <!--显示解析数据文本text2-->
            <TextView
                android:id="@+id/textView_NovelItem_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:textSize="18sp"/>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#dbd8d8"/>

            <!--显示作者名-->
            <TextView
                android:id="@+id/textView_NovelItem_author1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <!--显示作者简介-->
            <TextView
                android:id="@+id/textView_NovelItem_authorBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

