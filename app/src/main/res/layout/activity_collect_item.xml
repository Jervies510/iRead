<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_CollectActivity_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageView_CollectActivity_item">

        <TextView
            android:id="@+id/textView_CollectActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView_CollectActivity_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:text="这是摘要的内容，哈哈哈"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/imageView_CollectActivity_item"
        android:background="#c0bebe"/>


</RelativeLayout>